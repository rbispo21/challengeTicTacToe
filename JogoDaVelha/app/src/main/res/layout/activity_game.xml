<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.gazeus.jogodavelha.game.GameActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Jogo da Velha"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:id="@+id/constraintLayout">

        <ImageButton
            android:id="@+id/imgbtnl1c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:onClick="imgBtnClick"
            android:tag="1"
            app:layout_constraintRight_toLeftOf="@+id/imgbtnl1c2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl1c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:onClick="imgBtnClick"
            android:tag="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl1c3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:onClick="imgBtnClick"
            android:tag="3"
            app:layout_constraintLeft_toRightOf="@+id/imgbtnl1c2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl2c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="4"
            app:layout_constraintRight_toLeftOf="@+id/imgbtnl2c2"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl1c1"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl2c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl1c2"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl2c3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="6"
            app:layout_constraintLeft_toRightOf="@+id/imgbtnl2c2"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl1c3"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl3c1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="7"
            app:layout_constraintRight_toLeftOf="@+id/imgbtnl3c2"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl2c1"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl3c2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl2c2"
            app:srcCompat="@android:color/transparent" />

        <ImageButton
            android:id="@+id/imgbtnl3c3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="imgBtnClick"
            android:tag="9"
            app:layout_constraintLeft_toRightOf="@+id/imgbtnl3c2"
            app:layout_constraintTop_toBottomOf="@+id/imgbtnl2c3"
            app:srcCompat="@android:color/transparent" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:onClick="newGameBtnClick"
        android:text="Novo Jogo"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</android.support.constraint.ConstraintLayout>
